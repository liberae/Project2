<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#00ACC1</item>
    </style>
    <style name="special" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColor">#FFFF00</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#64DD17</item>

    </style>

    <style name="hp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#FFFF00</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#43A047</item>

    </style>

</resources>
